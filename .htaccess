# Disable directory browsing
Options -Indexes

# Protect against common file injection attacks
<IfModule mod_rewrite.c>
    RewriteEngine On

    # Block access to sensitive files
    RewriteRule ^(\.htaccess|\.htpasswd|\.user\.ini|web\.config|php\.ini) - [F]

    # Allow index.php to execute normally without redirection
    RewriteRule ^index\.php$ - [L]

    # If you want to serve the default page when accessing the domain root
    RewriteRule ^$ index.php [L]
</IfModule>

# Comprehensive Content Security Policy
<IfModule mod_headers.c>
    # Strict Content Security Policy
    Header set Content-Security-Policy "default-src 'self'; \
        script-src 'self' 'unsafe-inline' 'unsafe-eval' https://rio-lawis.com; \
        style-src 'self' 'unsafe-inline' https://rio-lawis.com; \
        img-src 'self' data: https:; \
        font-src 'self' https://rio-lawis.com; \
        connect-src 'self'; \
        frame-ancestors 'none'; \
        form-action 'self'; \
        base-uri 'self'; \
        object-src 'none'"

    # Additional Security Headers
    Header always set X-Content-Type-Options "nosniff"
    Header always set X-Frame-Options "DENY"
    Header always set X-XSS-Protection "1; mode=block"
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
    Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
</IfModule>

# Protect against SQL Injection and File Inclusion
<IfModule mod_rewrite.c>
    RewriteCond %{QUERY_STRING} (\<|%3C).*script.*(\>|%3E) [NC,OR]
    RewriteCond %{QUERY_STRING} GLOBALS(=|\[|\%[0-9A-Z]{0,2}) [OR]
    RewriteCond %{QUERY_STRING} _REQUEST(=|\[|\%[0-9A-Z]{0,2}) [OR]
    RewriteCond %{QUERY_STRING} ^.*(\(|\)|\{|\}|\[|\]|\^|\$|\.).*$ [NC]
    RewriteRule ^(.*)$ index.php [F,L]
</IfModule>

# PHP Configuration for Enhanced Security
<IfModule mod_php.c>
    php_value display_errors 0
    php_value display_startup_errors 0
    php_value log_errors 1
    php_value error_log /path/to/your/error.log
    
    # Disable dangerous PHP functions
    disable_functions = exec,passthru,shell_exec,system,proc_open,popen,curl_exec,curl_multi_exec,parse_ini_file,show_source
</IfModule>